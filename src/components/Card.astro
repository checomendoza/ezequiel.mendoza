---
interface Props {
	title: string
	body: string
	images: string[]
	technologies?: string[]
}
const { title, body, images, technologies } = Astro.props
let active = 0
---

<div class='bg-gray-700 p-4 rounded-xl border-gray-900 border-1 lg:columns-2 columns-1 min-h-48 relative'>
	<div class='break-inside-avoid-column flex flex-row gap-5 justify-center'>
		{images.map((image, index) => <img src={image} alt={title} class={`rounded-lg max-h-56`} />)}
	</div>
	<div class='break-inside-avoid-column mt-5'>
		<h2 class='font-semibold text-gray-300'>
			{title}
		</h2>
		<p class='text-gray-500 text-sm'>
			{body}
		</p>
		<div class='flex flex-wrap space-x-1 mt-5 relative'>
			{
				technologies?.map((item) => (
					<div class='flex items-center rounded-full bg-sky-300/10 px-3 py-1 text-xs font-medium leading-5 text-sky-300 mt-2 '>
						{item}
					</div>
				))
			}
		</div>
	</div>
</div>
