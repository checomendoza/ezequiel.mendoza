---
import { useTranslation } from '../i18n/utils';
import type { TypesLang } from '../i18n/i18n.types';
const {currentLocale} = Astro
const lang = currentLocale as TypesLang
const t = useTranslation(lang)

---
<aside class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/3 lg:flex-col lg:justify-between lg:py-24">
    <div class="flex justify-center flex-col  text-gray-200 ">
        <img src="./ProfilePhoto.png" class="bg-gray-400 rounded-full w-56" />
        <div class="items-center">
        <h1 class="text-3xl font-semibold">Ezequiel Mendoza</h1>
        <h2 class="text-md text-blue-200">{t('ui.title')}<h2/>
        </div>
        <nav class="py-10">
            <ul class='flex flex-col gap-2'>
                <li ><a href="#about" class="text-gray-200 bg-slate-600 py-2 px-3 rounded-lg w-full hover:text-slate-200">{t('ui.about')}</a></li>
                <li><a href="#experience" class="text-slate-400 py-2 px-3 rounded-lg w-full hover:text-slate-200">{t('ui.experience')}</a></li>
                <li><a href="#projects" class="text-slate-400 py-2 px-3 rounded-lg w-full hover:text-slate-200">{t('ui.projects')}</a></li>
            </ul>
        </nav>
    </div>
</aside>