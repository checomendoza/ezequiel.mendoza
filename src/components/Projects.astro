---
import { ProjectsData } from '../data';
import Card from './Card.astro';
import type { TypesLang } from "../i18n/i18n.types";
import { useTranslation } from "../i18n/utils";
const {currentLocale} = Astro
const lang = currentLocale as TypesLang
const t = useTranslation(lang)

---
<section id="projects" class="lg:py-5">
    <div class="sticky top-0 backdrop-blur-lg z-20 -mx-6 mb-4 px-6 py-3 lg:relative">
        <h2 class="font-semibold text-xl text-gray-200">{t('ui.projects')}</h2>
    </div>
    <p class="text-md font-light text-gray-400 pb-2">{t('ui.projectSubTitle')}</p>
    <div class="pb-1 space-y-3">
        {ProjectsData[lang].map((item, index)=>(
            <Card
    title={item.name}
    body={item.description}
    technologies={item.tags}
    />
        ))}
    
</div>
</section>