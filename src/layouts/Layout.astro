---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
const {currentLocale} = Astro
---

<!doctype html>
<html lang={currentLocale} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Software Engineer - Frontend Developer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
	</head>
	<body class="bg-gray-800 flex flex-col items-center">
		<div class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0">
			<main class="lg:flex lg:justify-between lg:gap-4">
	<Header />			
			<slot />
		</main>
			<!-- <Footer /> -->
		
		</div>
	</body>
	<script is:inline>
		const sections = document.querySelectorAll('section');
		const menuLinks = document.querySelectorAll('nav ul li a');
		function isSectionVisible(section) {
			const rect = section.getBoundingClientRect();
			return (
        rect.bottom > 0 &&
        rect.top < window.innerHeight
    );
		}
		
		function updateMenu() {
    let activeSectionIndex = -1;
    sections.forEach((section, index) => {
        const link = menuLinks[index];
        if (isSectionVisible(section) && activeSectionIndex === -1) {
            activeSectionIndex = index;
        }
    });

    menuLinks.forEach((link) => {
        link.classList.remove('text-gray-200');
        link.classList.add('text-slate-400');
    });

    if (activeSectionIndex !== -1) {
        menuLinks[activeSectionIndex].classList.add('text-gray-200');
        menuLinks[activeSectionIndex].classList.remove('text-slate-400');

    }
}		window.addEventListener('scroll', updateMenu);
				</script>
</html>
